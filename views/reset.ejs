<% include ./partials/header %>

<div class="container">
    <div id="register_div">
        <div>
            <h2>Reset Password<span></h2>
            <hr>
            <form method="POST">
                <div class="form-group">
                    <label for="password">New Password</label>
                    <input id="password" type="password" name="password" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="confirm">Confirm Password</label>
                    <input id="confirm-password" type="password" name="confirm" class="form-control" required>
                    <div id='message'></div>
                </div>
                <div class="form-group">
                    <button id="reset-submit" type="submit" class="btn btn-default"><strong>Update Password</strong></button>
                </div>
            </form>
        </div>
    </div>
</div>

<% include ./partials/footer %>
<script>
    $(document).ready(function() {
        document.title = 'Reset Password';
    });
    
    $('#password, #confirm-password').on('keyup', function () {
      if ($('#password').val() == $('#confirm-password').val()) {
        $('#message').html('Matching Password').css('color', '#19d800');
        $('#reset-submit').removeAttr("disabled");
      } else { 
        $('#message').html('Not Matching Password').css('color', 'red');
        $('#reset-submit').attr("disabled", true);
      }
    });
</script>